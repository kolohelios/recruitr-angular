h3 {{name | uppercase}}

.row
  .col-xs-4.col-xs-offset-1
    form(name='userForm', novalidate)
      .form-group
        label: h6(for='email') Email
        input.form-control.login#email(type='email', name='email', ng-model='user.email')
      .form-group
        label: h6(for='password') Password
        input.form-control.login#password(type='password', name='password', ng-model='user.password')
.row
  .col-xs-4.col-xs-offset-1
      .form-group
        button.btn.btn-success.login#createUser(ng-click='submit(user)') Sign in with Email
  .col-xs-8
