.row
  .col-sm-12
    .table-responsive
      table.table.table-striped
        thead
          tr
            th Photo
            th First Name
            th(ng-if='activeUser.role > 0') Last Name
            th Skills
            th Preferred Locations
            th(ng-if='activeUser.role===10') Edit
            th(ng-if='activeUser.role===10') Delete
        tbody
          tr(ng-repeat='student in students track by $index')
            td: img.photo(base-sixty-four-image='student.photo', ng-click='profileGo(student)')
            td(ng-click='profileGo(student)') {{student.firstName}}
            td(ng-if='activeUser.role > 0', ng-click='profileGo(student)') {{student.lastName}}
            td: ul 
              li(ng-repeat='skill in student.skills') {{skill}}
            td: ul
              li(ng-repeat='location in student.locationPref') {{location}}
            td(ng-if='activeUser.role===10'): button.btn.btn-warning: a(ui-sref='profiles.edit({studentId: student._id})') Edit
            td(ng-if='activeUser.role===10'): button.btn.btn-danger(ng-click='deleteStudent(student._id)') Delete
.row
  .col-xs-1
    button.btn.btn-info(ng-show='moveBack', ng-click='changePage("prev")', ng-model='prev') Prev
  .col-xs-10
  .col-xs-1
    button.btn.btn-info(ng-show='moveForward', ng-click='changePage("next")', ng-model='next') Next
